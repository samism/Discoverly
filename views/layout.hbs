        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
        <script>window.jQuery || document.write('<script src="javascripts/jquery-1.11.2.min.js"><\/script>')</script>
        <script src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js"></script>
        <script src="javascripts/bootstrap.min.js"></script>
        <script  type="text/javascript">

        var platform = new H.service.Platform({
            'app_id': 'habu7uC2upRacruDrUfu',
            'app_code': '85_CDKXMNkoraKX54-ZS-g'
        });

        // Obtain the default map types from the platform object:
        var defaultLayers = platform.createDefaultLayers();

        // Instantiate (and display) a map object:
        var map = new H.Map(
                document.getElementById('map'),
                defaultLayers.normal.map, {
                    zoom: 12,
                    center: { lat: 41.83, lng: -87.62 }
                });

        $(document).ready(function() {
            $("#map").css("height", $(window).height() + "px").css("width", $(window).width() + "px");
            /// /make the bottom hide-able
            $(".fa-minus").on("tap", function () {
                var height = $('.media-bricks').height();
                var curBottom = 0;
                var stop = false;

                var slideDown = setInterval(function () {
                    while ((curBottom * -1) <= (height - 20)) {
                        $('.media-bricks').css('bottom', (curBottom -= 10) + "px");
                        console.log("going: " + curBottom);
                    }

                    clearInterval(slideDown);

                }, 250);
            });

            $(".media-bricks img").on("tap", function(e) {

            });

            //onload get location of user
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (e) {
                    curLat = e.coords.latitude;
                    curLng = e.coords.longitude;
                    map.setCenter({lat: curLat, lng: curLng});
                    map.setZoom(10);
                });
            } else {
                alert("Must enable the browser to locate you!");
            }
        });
        </script>
    </body>
